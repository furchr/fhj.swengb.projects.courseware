                        <Label layoutX="20.0" layoutY="340.0" prefHeight="50.0" prefWidth="200.0" text="Student Number:">
                           <font>
                              <Font size="24.0" />
                           </font>
                        </Label>
                        <TextArea fx:id="studentNumber" editable="false" layoutX="220.0" layoutY="340.0" prefHeight="50.0" prefWidth="560.0" />
